<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:andriod="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    andriod:id="@+id/cv2"
    andriod:layout_width="match_parent"
    andriod:layout_height="wrap_content"
    andriod:animateLayoutChanges="true"
    app:cardCornerRadius="25dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true">

    <TextView
        andriod:id="@+id/idgrouptxt"
        andriod:layout_width="match_parent"
        andriod:layout_height="wrap_content"
        />

    <LinearLayout
        andriod:id="@+id/id_publications"
        andriod:layout_width="match_parent"
        andriod:layout_height="wrap_content"
        andriod:animateLayoutChanges="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idgrouptxt"
        andriod:orientation="vertical">
        <RelativeLayout
            andriod:layout_width="match_parent"
            andriod:layout_height="wrap_content"
            andriod:orientation="horizontal"
            andriod:padding="6dp">

            <LinearLayout
                andriod:id="@+id/linearLayout"
                andriod:layout_width="match_parent"
                andriod:layout_height="wrap_content"
                andriod:layout_alignParentTop="true"
                andriod:layout_marginTop="2dp"
                andriod:orientation="vertical"
                andriod:layout_marginLeft="4dp">

                <TextView
                    andriod:id="@+id/publicationstittle"
                    andriod:layout_width="match_parent"
                    andriod:layout_height="wrap_content"
                    andriod:layout_marginBottom="2dp"
                    andriod:text="Tittle"
                    andriod:textColor="@android:color/black"
                    andriod:textSize="20sp"
                    andriod:textStyle="bold"/>

                <TextView
                    andriod:id="@+id/publicationsauthors"
                    andriod:layout_width="match_parent"
                    andriod:layout_height="wrap_content"
                    andriod:text="Authors"
                    andriod:textSize="16sp" />

                <TextView
                    andriod:id="@+id/publicationsdoi"
                    andriod:layout_width="match_parent"
                    andriod:layout_height="wrap_content"
                    andriod:text="DOI"
                    andriod:textSize="16sp" />

                <Button
                    andriod:id="@+id/publication_html"
                    andriod:layout_width="wrap_content"
                    andriod:layout_height="wrap_content"
                    andriod:text="HTML"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>